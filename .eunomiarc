gitignore:
    languages:
        - python
        - c++
        - linux
        - macos
    workspace:
        - .vscode
        - .venv
        - .build
        -  build
        - cmake-build-debug
        - cmake-build-release
        - .idea

gitlint:
    title:
        regex: '^\[(wip|dev|test|doc|fix|feat|style|refact|error)\]\s[A-Z].*$'
        ignore: '^Release(.*)'
        min_length: 10
        max_length: 80
        forbidden: ''
    body:
        min_length: 10
        max_length: 512
    author:
        email: '[^@]+@gmail.com'
